<Window x:Class="LABYRINTH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LABYRINTH"
        mc:Ignorable="d"
        Title="JULES LAURENT - LABYRINTH" Height="600" Width="600">
    <Grid x:Name="Grille">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        
        <Canvas Grid.Column="0" x:Name="Canvas" ></Canvas>
        <Grid Grid.Column="1" x:Name="ControlsGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="15*" />
            </Grid.RowDefinitions>
            
            
            <Label Grid.Row="0">Taille du labyrinthe</Label>
            <TextBox Grid.Row="1" x:Name="Size"></TextBox>
            <Label Grid.Row="2">Point d'entrée</Label>
            <Grid Grid.Row="3" x:Name="EntryPointGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">X</Label>
                <TextBox Grid.Column="1"  x:Name="XEntryPoint"></TextBox>
                <Label Grid.Column="2">Y</Label>
                <TextBox Grid.Column="3" x:Name="YEntryPoint"></TextBox>
            </Grid>
            <Button  Grid.Row="4" x:Name="GenerateButton" Click="GenerateButton_OnClick">GENERER</Button>
            <Button  Grid.Row="5" x:Name="ResolveButton" Click="ResolveButton_OnClick">RESOUDRE</Button>
        </Grid>
        
    </Grid>
</Window>
